CREATE DATABASE Medyou;

CREATE TABLE usuario(
id INT AUTO_INCREMENT PRIMARY KEY,
nome VARCHAR(100) NOT NULL,
data_nascimento DATE(3) NOT NULL,
cpf VARCHAR(50) NOT NULL,
email VARCHAR(100) NOT NULL,
telefone NUMBER(13)
);

CREATE TABLE prescricao(
id INT AUTO_INCREMENT PRIMARY KEY,
descricao VARCHAR(100) NOT NULL,
alergias VARCHAR(100) NOT NULL,
deficiencias VARCHAR(100) NOT NULL,
tipo_sanguineo VARCHAR(50) NOT NULL,
doencas VARCHAR(150) NOT NULL
);

CREATE TABLE carteira_de_vacinacao(
id INT AUTO_INCREMENT PRIMARY KEY,
FOREIGN KEY id_vacina REFERENCE vacina(id),
FOREIGN KEY id_usuario REFERENCE usuario(id)
);

CREATE TABLE vacina(
id INT AUTO_INCREMENT PRIMARY KEY,
nome VARCHAR(100) NOT NULL
);
